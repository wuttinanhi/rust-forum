<div id="pagination" class="mt-3">
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">

      {{#each pagination.pages}}
        <li class="page-item">
          <a
            class="page-link"
            href="?page={{this}}&per_page={{pagination.per_page}}"
          >
            {{this}}
          </a>
        </li>
      {{/each}}

      <div class="px-2">
        <form method="get" action="" class="input-group mb-3">
          <input
            name="page"
            type="number"
            value="{{pagination.page}}"
            min="1"
            class="form-control"
            placeholder="Page"
            style="width: 4rem;"
            aria-label="Page"
            aria-describedby="button-addon2"
          />

          <input
            name="per_page"
            type="hidden"
            value="{{pagination.per_page}}"
            style="display: none;"
          />

          <button
            class="btn btn-outline-primary"
            type="submit"
            id="button-addon2"
          >
            Go
          </button>
        </form>
      </div>

      <div class="px-2">
        <div class="input-group">
          <select
            class="form-select"
            id="page_limit"
            onchange="javascript:handleSelect(this)"
            aria-label="page limit"
            style="height: 2.5rem;"
          >

            {{#each pagination.per_pages}}
              <option
                value="?page={{this.page}}&per_page={{this.limit}}"
                {{this.option_tag_attr}}
              >
                {{this.limit}}
              </option>
            {{/each}}

          </select>
        </div>
      </div>

    </ul>
  </nav>
</div>

<script type="text/javascript">
  function handleSelect(elm) { window.location = elm.value; }
</script>