{{#*inline "page"}}

<div class="row mt-5">
    <div class="col"></div>
    <div class="col-6">
        {{!-- {{ #if user }}
        Welcome: {{user.name}} <a href="users/logout">Logout</a>

        <div class="my-3 d-flex flex-row justify-content-end align-items-center">
            <a href="/posts/create" class="btn btn-outline-primary">New Post</a>
        </div>
        {{else}}
        Welcome &nbsp; <a href="users/register">Register</a> &nbsp; | &nbsp; <a href="users/login">Login</a>
        {{/if}} --}}

        <div id="posts" class="my-3">
            <div class="my-3 d-flex flex-row justify-content-between align-items-center">
                <h5 class="text-secondary">Posts:</h5>

                <a href="/posts/create" class="btn btn-primary float-end">New Post</a>
            </div>


            {{#each posts}}

            <div class="card my-3 p-0" id="{{this.post.id}}">
                <div class="card-body p-3 m-0">
                    <p>
                        <a href="/posts/{{this.post.id}}">
                            {{this.post.title}}
                        </a>
                        <br>
                        by:
                        <a href="/users/profile/{{this.user.id}}">{{this.user.name}}</a>

                        at {{this.post.created_at}}
                    </p>
                </div>
            </div>

            {{/each}}
        </div>

        {{pagination pagination_result}}

    </div>
    <div class="col"></div>
</div>

{{/inline}}
{{> (lookup this "parent")}}