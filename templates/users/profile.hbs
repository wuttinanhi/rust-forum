{{#*inline "page"}}

<div class="row mt-5">
  <div class="col"></div>
  <div class="col-6">

    <div class="mt-2">
      <img src="{{profile_users.user_profile_picture_url}}" class="rounded mx-auto d-block rounded-circle"
        style="width: 150px; height: 150px;">

      <h3 class="h3 mt-5 mb-3 font-weight-normal text-center">{{profile_users.name}}</h3>
    </div>


    <ul class="nav nav-tabs mt-5">
      <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">Posts</a>
      </li>

      <li class="nav-item">
        <a class="nav-link" href="#">Comments</a>
      </li>
    </ul>


    <div class="mt-3 mb-5">
      {{#each profile_users_created_posts}}

      <div class="card my-3 p-0" id="{{this.post.id}}">
        <div class="card-body px-3 pt-2 pb-0 m-0">
          <p>
            <a href="/posts/{{this.id}}">
              {{this.title}}
            </a>

            <br>

            at {{this.created_at}}
          </p>
        </div>
      </div>

      {{/each}}
    </div>


  </div>
  <div class="col"></div>
</div>

{{/inline}}
{{> (lookup this "parent")}}