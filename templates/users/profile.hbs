{{#*inline "page"}}

<div class="row mt-5">
  <div class="col"></div>
  <div class="col-6">

    <div class="mt-1">
      <img src="{{profile_users.user_profile_picture_url}}" class="rounded mx-auto d-block rounded-circle"
        style="width: 150px; height: 150px;">

      <h3 class="h3 my-3 font-weight-normal text-center">{{profile_users.name}}</h3>
    </div>


    <ul class="nav nav-tabs mt-2">
      <li class="nav-item">
        <a class="nav-link {{#if fetch_mode_posts}} active {{/if}}" aria-current="page"
          href="/users/profile/{{profile_users.id}}/posts">
          Posts
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link {{#if fetch_mode_comments}} active {{/if}}"
          href="/users/profile/{{profile_users.id}}/comments">Comments</a>
      </li>
    </ul>


    <div class="mt-3 mb-5">

      {{#if fetch_mode_posts}}
      {{#each profile_users_created_posts}}

      <div class="card my-3 p-0" id="{{this.post.id}}">
        <div class="card-body px-3 pt-2 pb-0 m-0">
          <p>
            <a href="/posts/{{this.id}}">
              {{this.title}}
            </a>

            <br>

            at {{this.created_at}}
          </p>
        </div>
      </div>

      {{/each}}
      {{/if}}


      {{#if fetch_mode_comments}}
      {{#each profile_users_created_comments}}

      <div class="card my-3 p-0" id="{{this.comment.id}}">
        <div class="card-body px-3 pt-2 pb-0 m-0">
          <p>
            <a href="/comments/{{this.id}}">
              {{this.content}}
            </a>

            <br>

            at {{this.created_at}}
          </p>
        </div>
      </div>

      {{/each}}
      {{/if}}

    </div>


  </div>
  <div class="col"></div>
</div>

{{/inline}}
{{> (lookup this "parent")}}