{{#*inline "page"}}

<div class="row mt-5">
  <div class="col"></div>
  <div class="col-6">
    <form class="form mt-5" method="post" action="">
      <h3 class="h3 mb-3 font-weight-normal">Reset Password</h3>

      <label for="new_password" class="form-label">New Password</label>
      <input name="new_password" type="password" class="form-control" id="new_password" placeholder="New Password"
        required="true" />

      <label for="confirm_password" class="form-label">Confirm New Password</label>
      <input name="confirm_password" type="password" class="form-control" id="confirm_password"
        placeholder="Confirm New Password" required="true" />

      <input type="hidden" name="token" value="{{ token }}" />

      <div class="mt-3">
        <button class="btn btn-primary btn-block" type="submit">Reset Password</button>
      </div>
    </form>
  </div>
  <div class="col"></div>
</div>

{{/inline}}
